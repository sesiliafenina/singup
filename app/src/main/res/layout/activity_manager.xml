<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50585D"
    tools:context=".ManagerActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="170dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dip"
        android:text="MANAGE ATTENDANCE"
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/qrCodeButton"
        android:layout_width="328dp"
        android:layout_height="167dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_round_and_invis"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dip"
        android:text="QR CODE"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="82dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/qrCodeButton"
        app:layout_constraintEnd_toEndOf="@+id/qrCodeButton"
        app:layout_constraintTop_toTopOf="@+id/qrCodeButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/qrcartoon" />

    <Button
        android:id="@+id/facialrecognitionButton"
        android:layout_width="328dp"
        android:layout_height="167dp"
        android:background="@drawable/button_round_and_invis"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dip"
        android:text="FACIAL       RECOGNITION"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrCodeButton" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="126dp"
        android:layout_height="115dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/facialrecognitionButton"
        app:layout_constraintEnd_toEndOf="@+id/facialrecognitionButton"
        app:layout_constraintTop_toTopOf="@+id/facialrecognitionButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/facialrecog" />


</androidx.constraintlayout.widget.ConstraintLayout>